@model IEnumerable<SupplyManagement.Models.ViewModels.RegisterViewModel>;

@{
    ViewData["Title"] = "Managers";
}
<br />
<div class="row">
	<div class="col-6">
		<h2 class="text-info">Managers List</h2>
	</div>
	<div class="col-6 align-self-center">
		<a asp-action="Create" class="btn btn-info float-end"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp; New Manager</a>
	</div>
</div>
<br />
<div>
	<table class="table table-striped border" id="managersTable">
		<thead>
			<tr class="table-info">
				<th>
					@Html.DisplayNameFor(i => i!.Email)
				</th>
				<th>
					@Html.DisplayNameFor(i => i!.Username)
				</th>
				<th>
					@Html.DisplayNameFor(i => i.Name)
				</th>
				<th>
					@Html.DisplayNameFor(i => i.Surname)
				</th>
				<th>
					@Html.DisplayNameFor(i => i.UserRole)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in @Model)
			{
				<tr>
					<td><a asp-action="Details" asp-route-id="@item.Id" class="link-info text-decoration-none">@item.Email</a></td>
					<td>@item.Username</td>
					<td>@item.Name</td>
					<td>@item.Surname</td>
					<td>@item.UserRole</td>
					<td class="d-flex flex-row-reverse">
						<div class="btn-group">
							<a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id"><i class="fa fa-list" aria-hidden="true"></i></a>
							<a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa fa-trash" aria-hidden="true"></i></a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<br />
</div>