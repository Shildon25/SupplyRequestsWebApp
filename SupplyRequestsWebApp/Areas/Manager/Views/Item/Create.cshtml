@model SupplyManagement.Models.Item

@{
    ViewData["Title"] = "Create Item";
}
<br />
<h2 class="text-info">Create Item</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="p-4 rounded border p">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row my-3">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row my-3">
            <div class="col-2">
                <label asp-for="VendorId"></label>
            </div>
            <div class="col-5">
                <select asp-for="VendorId" asp-items="ViewBag.vendorId" class="form-control form-select">
                </select>
            </div>
            <span asp-validation-for="VendorId" class="text-danger">
            </span>
        </div>
        <div class="form-group my-3">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

