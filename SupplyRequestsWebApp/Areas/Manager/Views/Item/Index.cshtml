@model IEnumerable<SupplyManagement.Models.Item>;

@{
    ViewData["Title"] = "Items";
}
<br />
<div class="row">
	<div class="col-6">
		<h2 class="text-info">Items List</h2>
	</div>
	<div class="col-6 align-self-center">
		<a asp-action="Create" class="btn btn-info float-end"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp; New Item</a>
	</div>
</div>
<br />
<div>
	<table class="table table-striped border" id="itemsTable">
		<thead>
			<tr class="table-info">
				<th>
					@Html.DisplayNameFor(i => i!.Name)
				</th>
				<th>
					@Html.DisplayNameFor(i => i!.VendorId)
				</th>
				<th>
					@Html.DisplayNameFor(i => i.CreatedByUserId)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in @Model)
			{
				<tr>
					<td><a asp-action="Details" asp-route-id="@item.Id" class="link-info text-decoration-none">@item.Name</a></td>
					<td>@item.Vendor.Name</td>
					<td>@item.CreatedBy.Email</td>
					<td class="d-flex flex-row-reverse">
						<partial name="~/Views/Shared/_ButtonPartial.cshtml" model="@item.Id" />
					</td>
				</tr>
			}
		</tbody>
	</table>
	<br />
</div>

@section Scripts {
	<script type="text/javascript">
		$(document).ready(function () {
			$('#itemsTable').DataTable({
				dom: 'Bfrtip',
			});
		});
	</script>
}