@model SupplyManagement.WebApp.Models.ViewModels.VendorsViewModel

@{
    ViewData["Title"] = "Vendors";
}

<h1>List of Vendors</h1>

<p>
    <a asp-action="Create">Create New Vendor</a>
</p>
<form asp-controller="Vendor" asp-action="Index" method="get">
    <p>
        Vendor Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vendors[0]!.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendors[0]!.CreatedBy.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Vendors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>